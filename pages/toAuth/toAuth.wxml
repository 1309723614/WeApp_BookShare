<loading hidden="{{ !loading }}">加载中...</loading>
<view style="width:98%;margin:10px 1%">
    <view class="photo item" style="height:120px;text-align:center;margin-top:20px">
        <view class="notice" bindtap="chooseImage" hidden="{{hidden}}">
            点击上传校园卡或教工卡
        </view>
        <view style="width:100%;height:240rpx;margin-top:20px">
            <view class="cl_list cl_ico" wx:for="{{pictureFiles}}"  wx:for-index="index" wx:for-item="image">
                <text class="cl_ico_checked cl_ico"></text>
                <image data-src="{{image}}" data-index="{{index}}" bindtap="pictureView" bindlongtap="changePicture" style="height:200rpx" mode="scaleToFill" bindtap="" src="{{image==''?'../../images/user_defaulthead@2x.png':image}}"></image>
            </view>
            <view style="clear:both"></view>
        </view>
        <!-- <view class="photo-box" wx:for="{{pictureFiles}}" wx:for-item="image" style="width:100px;margin:0 auto;">
            <image data-src="{{image}}" src="{{image==''?'../../images/user_defaulthead@2x.png':image}}" class="personal_logo" id="personal_logo"></image>
        </view> -->
    </view>
    <view class="name item">
        <image src="../../images/myAttention.png" class="item_ico"></image>
        <text>姓名</text>
        <input class="value-right" type="text" bindinput="setName" value="{{userInfo.userName?userInfo.userName:''}}" placeholder="请输入真实姓名"/>
    </view>
    <view class="h1"></view>
    <view class="school item">
        <image src="../../images/myAttention.png" class="item_ico"></image>
        <text>学校</text>
        <picker bindchange="bindPickerSchoolChange" class="value-right" value="{{schoolIndex}}" range="{{school}}">
            <view class="picker">
                {{school[schoolIndex]}}
            </view>
        </picker>
    </view>
    <view class="h1"></view>
    <view class="major item">
        <image src="../../images/myAttention.png" class="item_ico"></image>
        <text>专业</text>
        <!-- <picker bindchange="bindPickerMajorChange" class="value-right" value="{{majorIndex}}" range="{{major}}">
            <view class="picker">
                {{major[majorIndex]}}
            </view>
        </picker> -->
        <input class="value-right" type="text" bindinput="setMajor" value="{{userInfo.userName?userInfo.userName:''}}" placeholder="请输入班级"/>
    </view>
    <view class="h1"></view>
    <view class="phone item">
        <image src="../../images/myAttention.png" class="item_ico"></image>
        <text>联系方式</text>
        <input class="value-right" type="text" bindinput="setPhone" value="{{userInfo.userName?userInfo.userName:''}}" placeholder="请输入联系方式"/>
    </view>
    <view class="h1"></view>
    <view class="status item">
        <image src="../../images/myAttention.png" class="item_ico"></image>
        <text>学号</text>
        <input class="value-right" type="text" bindinput="setCardId" value="{{userInfo.userName?userInfo.userName:''}}" placeholder="请输入学号/教职工编号"/>
    </view>
    <view class="h1"></view>
    <view class="block" style="width:100%;height:50px;"></view>
</view>
<view id="footer" style="display:block;bottom:0px;position:fixed;width:100%;height:50px;z-index:1000px;">
    <button bindtap="toAuth" style="width:100%;color:#fff;height:50px;background: #33CCFF;text-align: center;">
            认证
        </button>
</view>

<!--分类 start-->
<scroll-view style="height:100%" id="catewrap" scroll-into-view="c2" scroll-y="true" hidden="{{!cateisShow}}">
    <view class="close" bindtap="togglePtype" id="closecatelist"></view>
    <view id="cateall" bindtap="cateselect" class="cl_list ">
        <!-- <text class="cl_ico_checked cl_ico"></text> -->照片列表
    </view>
    <view style="width:100%;">
        <view class="cl_list cl_ico" wx:for="{{pictureFiles}}" wx:for-item="image">
            <text class="cl_ico_checked cl_ico"></text>
            <image data-src="{{image}}" style="height:240rpx" mode="scaleToFill" src="{{image==''?'../../images/user_defaulthead@2x.png':image}}"></image>
        </view>
        <view style="clear:both"></view>
    </view>

    <form name='pushMsgFm' report-submit="true" bindsubmit="affirmBorrowBook">
        <button form-type="submit" style="width:95%;margin:0 auto;border-radius:5px;height:50px;background: #FE552E;text-align: center;color:#fff;position:fixed;bottom:0px" class="btn">
            确认
        </button>
    </form>
</scroll-view>
<!--分类 end-->